print y;

/* Loops */
print "For loop: ";
for (var i = 0; i < 4; i = i + 1) {
    print i;
}

print "While loop: ";
var i = 0;
while (i < 4) {
    print i;
    i = i + 1;
}

/* Logic */
print "Boolean logic: ";
print true or false;
print true and true;
print true and false;

if (1 == 1) { print "1 equals 1"; }

/* Functions */
print "Functions: ";
fun hello(name) {
    print "Hello " + name + "!";
}

